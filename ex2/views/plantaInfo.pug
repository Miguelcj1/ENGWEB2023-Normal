extends layout

block content
  .w3-card-4
    header.w3-container.w3-blue
      h1 Planta #{planta._id} [#[a(href="/") Voltar]]

    .w3-container.w3-margin-top.w3-margin-bottom
      table.w3-table-all
        each val, key in planta
          tr 
            th.w3-blue= key
              if val 
                td= val
              else 
                td null

    footer.w3-container.w3-blue
      h5 Generated by EngWeb2023 in #{d}
