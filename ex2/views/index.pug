extends layout

block content
  header.w3-container.w3-blue
    h1 Plantas

  .w3-container
    table.w3-table-all.w3-hoverable
      tr
        th ID
        th Freguesia
        th Espécie
        th Estado
        th Número de intervenções
      each planta in plantas
        tr
          td 
            a(href="/" + planta._id)= planta._id
          td= planta.Freguesia
          td
            a(href="/especies/" + planta.Espécie)= planta.Espécie
          td= planta.Estado
          if planta["Número de intervenções"]
            td= planta["Número de intervenções"]
          else
            td 0

  footer.w3-container.w3-blue
    h5 Generated by EngWeb2023 in #{d}
